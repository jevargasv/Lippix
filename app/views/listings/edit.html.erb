<div class="content">
    <% if current_user %>
    <div class="ui breadcrumb">
       <div class="section">Home</div>
       <div class="divider"> / </div>
       <div class="active section">Listings</div>
    </div>
    <% end %>
<div class="ui card">
<h1>Edit a listing item</h1>
<%= form_for(@listing) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </div>
  <div class="form-group">
    <%= f.label :brand %><br>
    <%= f.text_field :brand %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="form-group">
    <%= f.label :color %><br>
		<%= f.text_field :color %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
	<div class="form-group">
    <%= f.label :image %><br>
		<%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<%= link_to 'Back', listings_path %>
</div>
